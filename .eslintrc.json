{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:react/recommended", "prettier", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "import/prefer-default-export": "off",
    "comma-dangle": "off",
    "linebreak-style": "off",
    "no-param-reassign": "off",
    "no-use-before-define": "off",
    "no-tabs": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      },
      {
        "usePrettierrc": true,
        "fileInfoOptions": {
          "withNodeModules": false
        }
      }
    ],
    "arrow-parens": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  }
}
